<!doctype html>
<html lang="de" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cluedo Notizbuch (lokal)</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    body { font-family: 'Inter', sans-serif; }
    @view-transition { navigation: auto; }
  </style>
</head>
<body class="h-full text-gray-100 min-h-screen" style="background-color: #111827;">
  <div id="app" class="w-full h-full overflow-auto py-8 px-4"></div>

  <script>
    // Feste Farben (du kannst sie hier einfach Ã¤ndern)
    const config = {
      background_color: "#111827",    // Dunkelgrau
      surface_color: "#1f2937",       // Etwas helleres Grau fÃ¼r Karten
      primary_action_color: "#374151", // Hintergrund bei angekreuzt
      accent_color: "#dc2626",        // Rot fÃ¼r Akzente und Checkboxes
      game_title: "Cluedo Ermittlungen",
      instructions_text: "Tippe auf eine Option, um sie auszuschlieÃŸen"
    };

    const suspects = ["Oberst von Gatow", "Professor Bloom", "Reverend GrÃ¼n", "Baronin von Porz", "FrÃ¤ulein Gloria", "Frau WeiÃŸ"];
    const weapons = ["Dolch", "Leuchter", "Pistole", "Seil", "Rohrzange", "Heizungsrohr"];
    const rooms = ["Halle", "Salon", "Speisezimmer", "KÃ¼che", "Musikzimmer", "Wintergarten", "Bibliothek", "Arbeitszimmer", "Billardraum"];

    // Speichert den Zustand nur im Browser (verschwindet beim Neuladen nicht, dank localStorage)
    let checkedStates = new Map();

    // Lade gespeicherte ZustÃ¤nde aus localStorage (falls vorhanden)
    function loadStates() {
      const saved = localStorage.getItem('cluedo_checked');
      if (saved) {
        JSON.parse(saved).forEach(([key, value]) => checkedStates.set(key, value));
      }
    }

    function saveStates() {
      localStorage.setItem('cluedo_checked', JSON.stringify(Array.from(checkedStates.entries())));
    }

    loadStates();

    function toggleItem(category, item) {
      const key = `${category}-${item}`;
      const newState = !(checkedStates.get(key) || false);
      checkedStates.set(key, newState);
      saveStates();
      renderApp();
    }

    function renderApp() {
      const { background_color: bg, surface_color: surface, primary_action_color: primary, accent_color: accent, game_title: title, instructions_text: instructions } = config;

      document.body.style.backgroundColor = bg;

      document.getElementById('app').innerHTML = `
        <div class="max-w-5xl mx-auto">
          <header class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">${title}</h1>
            <p class="text-lg opacity-80">${instructions}</p>
          </header>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            ${renderCategory('VerdÃ¤chtige', 'suspects', suspects, surface, primary, accent)}
            ${renderCategory('Waffen', 'weapons', weapons, surface, primary, accent)}
            ${renderCategory('RÃ¤ume', 'rooms', rooms, surface, primary, accent)}
          </div>

          <div style="background-color: ${surface}; border-color: ${accent};" class="p-8 rounded-2xl border-2 shadow-2xl">
            <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
              <span class="text-4xl">ðŸŽ¯</span> MÃ¶gliche LÃ¶sung
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              ${renderSolution('TÃ¤ter', 'suspects', suspects, accent)}
              ${renderSolution('Waffe', 'weapons', weapons, accent)}
              ${renderSolution('Tatort', 'rooms', rooms, accent)}
            </div>
          </div>
        </div>
      `;

      document.querySelectorAll('.item-checkbox').forEach(cb => {
        cb.addEventListener('change', e => {
          const { category, item } = e.target.dataset;
          toggleItem(category, item);
        });
      });
    }

    function renderCategory(title, category, items, surface, primary, accent) {
      return `
        <div style="background-color: ${surface};" class="p-6 rounded-2xl shadow-xl">
          <h2 style="border-bottom-color: ${accent};" class="text-2xl font-semibold mb-5 pb-3 border-b-2">${title}</h2>
          <ul class="space-y-3">
            ${items.map(item => {
              const key = `${category}-${item}`;
              const checked = checkedStates.get(key) || false;
              return `
                <li>
                  <label style="background-color: ${checked ? primary : 'transparent'};" 
                         class="flex items-center gap-4 p-4 rounded-lg cursor-pointer transition-all hover:opacity-80 hover:bg-gray-600">
                    <input
                      type="checkbox"
                      id="${key}"
                      class="item-checkbox w-6 h-6 rounded focus:ring-4 focus:ring-offset-gray-800"
                      style="accent-color: ${accent};"
                      data-category="${category}"
                      data-item="${item}"
                      ${checked ? 'checked' : ''}
                    >
                    <span class="text-lg flex-1">${item}</span>
                  </label>
                </li>
              `;
            }).join('')}
          </ul>
        </div>
      `;
    }

    function renderSolution(title, category, items, accent) {
      const possible = items.filter(item => !(checkedStates.get(`${category}-${item}`) || false));

      return `
        <div>
          <h3 style="color: ${accent};" class="text-xl font-semibold mb-4">${title}</h3>
          ${possible.length > 0
            ? `<ul class="space-y-2">${possible.map(item => `<li class="bg-red-900 bg-opacity-30 px-4 py-2 rounded-lg text-lg">âœ“ ${item}</li>`).join('')}</ul>`
            : `<p class="text-gray-500 italic">Alle ausgeschlossen</p>`
          }
        </div>
      `;
    }

    // Starte die App direkt
    renderApp();
  </script>
</body>
</html>
